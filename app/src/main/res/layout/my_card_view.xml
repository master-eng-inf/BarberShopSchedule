<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4sp"
    android:clickable="true">

    <RelativeLayout
        style="@style/CardView.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?android:selectableItemBackground">

        <ImageView
            android:id="@+id/image_cv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/name_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_cv"
            android:paddingLeft="16sp"
            android:paddingRight="16dp"
            android:paddingTop="5dp"
            android:textColor="#000"
            android:textSize="18sp"
            tools:ignore="RtlHardcoded" />


        <TextView
            android:id="@+id/description_cv"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_cv"
            android:layout_toRightOf="@+id/image_cv"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="5dp"
            android:textColor="#000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/address_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_cv"
            android:layout_toRightOf="@+id/image_cv"
            android:paddingLeft="16sp"
            android:paddingRight="16dp"
            android:paddingTop="5dp"
            android:textColor="#000"
            android:textSize="15sp"
            tools:ignore="RtlHardcoded"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>
